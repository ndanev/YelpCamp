<% include partials/header.ejs %>


    <div class="container">
        <header class="jumbotron jumbotron-fluid bg-light">
            <div class="container">
                <h1>Welcome To YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
            </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap:wrap">

            <% campgrounds.forEach(function(campground) { %>
                
                    <div class="col-md-3 col-sm-6">
                        <div class="img-thumbnail mb-4">
                            
                            <img class="img-fluid" src="<%= campground.image %>" alt="">
                            <figure class="figure mt-2">
                                <h5><%= campground.name %></h5>
                            </figure>
                            <p><a class="btn btn-info" href="campgrounds/<%= campground._id %>">Read More</a></p>
                        </div>
                    </div>
                
            <% }) %>
        </div>
    </div>

<% include partials/footer.ejs %>
