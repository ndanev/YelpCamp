<% include ../partials/header %>


<div class="container">
    <section class="section section-add">
        <div class="section-add-text">
            <h1>Lorem ipsum dolor sit amet consectetur elit</h1>
            <p>Lorem ipsum dolor sit amet consectetur elit</p>
        </div>
        <div class="section-add-button">
            <a class="button button-add" href="/campgrounds/new"><img src="/img/plus.svg" alt=""> Dodaj novo mesto</a>
        </div>
    </section>
    <div class="row text-center" style="display:flex; flex-wrap:wrap">

        <% campgrounds.forEach(function(campground) { %>

        <div class="col-md-4 col-sm-6">
            <div class="img-thumbnail mb-4">

                <img class="img-fluid" src="<%= campground.image %>" alt="">
                <figure class="figure mt-2">
                    <h5><%= campground.name %></h5>
                </figure>
                <p><a class="btn btn-info" href="campgrounds/<%= campground._id %>">Read More</a></p>
            </div>
        </div>

        <% }) %>
    </div>
</div>

